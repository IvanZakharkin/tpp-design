//- #account-page
.account-page.py-5
    .container
        .row
            .col-12.col-md-3.mb-3.mb-md-0
                .account-page__avatar
                    .account-page__avatar-pic
                        img.account-page__avatar-img(
                            src="../images/persons/avatar1.jpg"
                        )
                    .account-page__avatar-hover-block
                        button.btn.account-page__avatar-hover-block-btn-close(type="button")
                            i.fas.fa-times
                        .account-page__avatar-hover-block-content
                            button.btn.account-page__avatar-hover-block-btn(type="button")
                                .account-page__avatar-hover-block-btn-icon.mr-2
                                    i.fas.fa-camera
                                .account-page__avatar-hover-block-btn-title Сделать фото
                            label.btn.account-page__avatar-hover-block-btn
                                input.account-page__avatar-input-file(type="file")
                                .account-page__avatar-hover-block-btn-icon.mr-2
                                    i.fas.fa-upload
                                .account-page__avatar-hover-block-btn-title Загрузить фото
            .col-12.col-md-9
                form.account-page__form(action="")
                    .form-group
                        .account-title.mb-4 Мои данные
                        ul.account-info-list.mb-5.w-75
                            label.account-info-list__item.form-group.d-block
                                .account-info-list__item-title.mb-2 Фамилия
                                .position-relative.mb-2
                                    input.form-control.account-info-list__item-value(placeholder="Захаркин" type="text" name="last-name")
                                    button.btn.btn-sm.account-info-list__btn.account-info-list__btn_text#btn-show-cases-popup(type='button') Другие падежи
                            label.account-info-list__item.form-group.d-block
                                .account-info-list__item-title.mb-2 Имя
                                .position-relative.mb-2
                                    input.form-control.account-info-list__item-value(placeholder="Иван" type="text" name="first-name")
                                    button.btn.btn-sm.account-info-list__btn.account-info-list__btn_text#btn-show-cases-popup(type='button') Другие падежи
                            label.account-info-list__item.form-group.d-block
                                .account-info-list__item-title.mb-2 Отчество
                                .position-relative.mb-2
                                    input.form-control.account-info-list__item-value(placeholder="Сергеевич" type="text" name="patronymic")
                                    button.btn.btn-sm.account-info-list__btn.account-info-list__btn_text#btn-show-cases-popup(type='button') Другие падежи
                                
                            label.account-info-list__item.form-group.d-block
                                .account-info-list__item-title.mb-2 Должность
                                input.form-control.account-info-list__item-value(placeholder="Фронтенедр" type="text" name="post")
                            label.account-info-list__item.form-group.d-block
                                .account-info-list__item-title.mb-2 Организация
                                input.form-control.account-info-list__item-value(placeholder="Forumedia" type="text" name="address")
                            label.account-info-list__item.form-group.d-block
                                .account-info-list__item-title.mb-2 Пол
                                select.form-control.account-info-list__item-value(placeholder="мужской" type="еуче" name="gender")
                                    option мужской
                                    option женский
                            label.account-info-list__item.form-group.d-block
                                .account-info-list__item-title.mb-2 Дата рождения
                                input.form-control.account-info-list__item-value(placeholder="" type="text" name="")
                    .form-group
                        .account-title.mb-4 Контактные данные
                        .account-info-list.mb-5.w-75
                            label.account-info-list__item.form-group.d-block
                                .account-info-list__item-title.mb-2 Email
                                input.form-control.account-info-list__item-value(placeholder="email" type="email" name="email")
                            label.account-info-list__item.form-group.d-block
                                .account-info-list__item-title.mb-2 Мобильный телефон
                                input.form-control.account-info-list__item-value(placeholder="123132132" type="text" name="tel")
                    .form-group
                        .account-title.mb-4 Изменить пароль
                        .account-info-list.mb-5.w-75
                            label.account-info-list__item.form-group.d-block
                                .account-info-list__item-title.mb-2 Текущий пароль
                                input.form-control.account-info-list__item-value(placeholder="123132132" type="password" name="current-password")
                            label.account-info-list__item.form-group.d-block 
                                .account-info-list__item-title.mb-2 Новый пароль
                                input.form-control.account-info-list__item-value(placeholder="123132132" type="password" name="new-password")
                            label.account-info-list__item.form-group.d-block 
                                .account-info-list__item-title.mb-2 Повторите пароль
                                input.form-control.account-info-list__item-value(placeholder="123132132" type="password" name="new-password-repeat")
                    #account-document
                        
