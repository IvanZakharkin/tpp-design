                                    .col-12.col-sm-6.col-md-4.mb-3.mb-md-0
                                        .card.account-organization-certificate.account-organization-certificate_not-active
                                            .card-body.account-organization-certificate__body
                                                .account-organization-certificate__pic.mr-3
                                                    +image(`${certificate[2]}`, "account-organization-certificate__img")
                                                .account-organization-certificate__info
                                                    .account-organization-certificate__title.mb-2= certificate[0]
