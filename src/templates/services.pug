section.services.py-5.bg-light
	.container
		.row.mb-4
			.col
				h2.title Услуги
			.col.text-right
				a.btn.btn-outline-blue.text-uppercase.mr-2(href="#").d-none.d-sm-inline-block Инфографика
				a.btn.btn-outline-blue.text-uppercase(href="#") Подробнее
		.slider.services__slider
			button.slider__btn.slider__btn_prev.slider__btn_small
				+icon('arrow', 'slider__btn-icon')
			button.slider__btn.slider__btn_next.slider__btn_small
				+icon('arrow', 'slider__btn-icon')
			.slider__container.row
					-
						var servicesList = [
							['Экспертиза',
							'экспертиза.svg',
							['Идентификационная экспертиза, ', 'Контрактная экспертиза, ', 'Пожарно-техническая экспертиза и пожарный аудит, ', 'Страховая экспертиза, ', 'Судебная экспертиза', 'Товарная экспертиза', 'Экспертиза страны происхождения товара, ', 'Энергетическое обследование']
							],
							['Оценка',
							'оценка.svg',
							['Оценка бизнеса, ', 'Оценка нематериальных активов, ', 'Оценка технологического оборудования, деталей машин, ', 'Оценка ущерба, ', 'Оценка недвижимости, ', 'Оценка сооружений и передаточных устройств, ', 'Оценка транспортных средств, ', 'Другие виды оценки']
